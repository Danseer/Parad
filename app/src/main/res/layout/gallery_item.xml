<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_play_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_play_name"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text='Модельное агенство "Глянец"'
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/iv_play_avatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_play_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Николаев, Украина"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/iv_location_play"
                app:layout_constraintTop_toBottomOf="@+id/tv_play_name" />

            <ImageView
                android:id="@+id/iv_location_play"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toRightOf="@+id/iv_play_avatar"
                app:layout_constraintTop_toBottomOf="@+id/tv_play_name"
                app:srcCompat="@drawable/location" />

            <TextView
                android:id="@+id/tv_title_play"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:text='Лучшая фотомодель агенства "Глянец" 2017'
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_play_location" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_play"
                tools:layout_editor_absoluteX="8dp"
                android:id="@+id/rv_play_cardview" />

            <TextView
                android:id="@+id/tv_time_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:text="2д, 7ч, 30м"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_play_cardview" />

            <CheckBox
                android:id="@+id/checkBox_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:text="517"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_play_cardview" />

            <TextView
                android:id="@+id/tv_hashtag_play"
                android:layout_width="334dp"
                android:layout_height="17dp"
                android:layout_marginTop="40dp"
                android:text="хэш тэги"
                app:layout_constraintTop_toBottomOf="@+id/rv_play_cardview"
                app:layout_constraintLeft_toRightOf="@+id/ivHashTag"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:id="@+id/iv_clock_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="11dp"
                app:layout_constraintRight_toLeftOf="@+id/tv_time_play"
                app:layout_constraintTop_toBottomOf="@+id/rv_play_cardview"
                app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

            <ImageButton
                android:id="@+id/ib_meny_play_cardview"
                android:layout_width="35dp"
                android:layout_height="28dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="4dp"
                android:background="@color/cardview_light_background"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_set_as" />

            <TextView
                android:id="@+id/tv_data_play_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="12.10.2017"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="33dp" />

            <ImageView
                android:id="@+id/iv_bonus_play_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintRight_toLeftOf="@+id/ib_meny_play_cardview"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <ImageView
                android:id="@+id/ivHashTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hashtag"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBox_play"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toLeftOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>